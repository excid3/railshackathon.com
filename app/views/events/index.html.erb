<div class="flex justify-between mb-8">
  <div>
    <%= link_to "Create a Event", new_event_path, class: 'btn btn-primary' if current_user && current_user.admin? %>
  </div>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 text-center md:grid-cols-3 gap-4">
  <% @events.each do |event| %>
    <%= link_to event, class: "block bg-gray-50 p-8 mb-8 rounded-lg no-underline hover:bg-gray-100" do %>
      <h3 class="mt-0 font-bold"><%= event.theme %></h3>
      <div class="text-sm text-gray-700">
        <%= event.start_date.to_s(:long) %> - <%= event.end_date.to_s(:long) %>
      </div>
    <% end %>
  <% end %>
</div>
